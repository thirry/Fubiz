<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="6"
    tools:context="com.ev.gone.fubiz.Views.CountdownActivity"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
    </LinearLayout>

    <ProgressBar
        android:id="@+id/progressBarCircle"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="250dp"
        android:layout_height="0dp"
        android:layout_weight="3"
        android:layout_gravity="center"

        android:background="@drawable/view_circle_fin"
        android:indeterminate="false"
        android:indeterminateDrawable="@drawable/view_circle_in_progress"
        android:max="100"
        android:progressDrawable="@drawable/view_circle_in_progress"
        android:rotation="-90"/>

    <LinearLayout
        android:id="@+id/circle_progress"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/textViewTime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="#212121"
            android:textSize="40sp"
            />

        <!--<Button-->
        <!--android:id="@+id/btnSetting"-->
        <!--android:layout_width="30dp"-->
        <!--android:layout_height="30dp"-->
        <!--android:text="Setting"-->
        <!--android:layout_gravity="center" />-->

        <!--<Button-->
        <!--android:id="@+id/buttonStartStop"-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:layout_gravity="center"-->
        <!--android:text="start"/>-->

        <!--<Button-->
        <!--android:layout_width="100dp"-->
        <!--android:layout_height="100dp"-->
        <!--android:text="Setting"/>-->
        <!---->

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="5">

        <Space
            android:layout_width= "0dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:layout_gravity="center"
            />

        <Button
            android:id="@+id/btnSetting"
            android:layout_width= "0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:text="Time"
            android:textSize="13dp"
            android:layout_gravity="center"
            android:textColor="@color/white"
            android:background="@drawable/button_countdown"/>

        <Space

            android:layout_width= "0dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:layout_gravity="center"
           />

        <Button
            android:id="@+id/buttonStartStop"
            android:layout_width= "0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:textSize="13dp"
            android:layout_gravity="center"
            android:text="start"
            android:textColor="@color/white"
            android:background="@drawable/button_countdown"/>

        <Space
            android:layout_width= "0dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:layout_gravity="center"
            />
    </LinearLayout>


</LinearLayout>
